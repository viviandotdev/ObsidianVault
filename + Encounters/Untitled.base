views:
  - type: table
    name: Table
    filters:
      and:
        - file.hasLink("00 Atlas/Bookshelf")
        - file.tags.contains("#source/book")
    order:
      - file.name
      - status
      - author
    sort:
      - property: file.links
        direction: DESC
    columnSize:
      file.name: 406
      note.status: 97
